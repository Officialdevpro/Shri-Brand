    <section class="pro-cont">
      <!-- ========== Products (single) ========== -->
      <div class="veg-container showcard">
        <h3>Single Pack</h3>
        <ul class="products-ul">
          <% if (products && products.length> 0) { %>
            <% products.forEach(function(product) { %>
              <li>
                <div class="card" data-product-id="<%= product._id %>" data-slug="<%= product.slug %>"
                  style="cursor:pointer">
                  <% if (product.stock <=0) { %>
                    <span class="stock-label">Out of Stock</span>
                    <% } %>
                      <div class="card-img">
                        <img loading="lazy" src="<%= product.mainImage %>" alt="<%= product.name %>" class="img" />
                      </div>
                      <div class="product-description">
                        <p class="product-title">
                          <%= product.name %>
                        </p>
                        <small class="sample">
                          <%= product.shortDescription.slice(0, 55) %>..
                        </small><br />
                        <p class="rupees"><span class="rupees"></span>‚Çπ<%= product.price %>
                        </p>
                        <% if (product.originalPrice) { %>
                          <span class="light">M.R.P:<strike class="light">‚Çπ<%= product.originalPrice %></strike>(<%=
                              product.discountPercentage %>% Off)</span>
                          <% } %>
                      </div>
                      <button class="addtoplate" data-item-name="<%= product.productType %>"
                        data-id="<%= product._id %>">
                        Add to Cart
                      </button>
                </div>
              </li>
              <% }); %>
                <% } else { %>
                  <!-- Skeleton placeholders -->
                  <% for (var i=0; i < 6; i++) { %>
                    <li>
                      <div class="skeleton-card">
                        <div class="skeleton-img"></div>
                        <div class="skeleton-body">
