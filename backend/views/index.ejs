      background-color: #ffffff;
      position: fixed;
      top: 60px;
      right: 0;
      z-index: 20;

      display: flex;
      flex-direction: column;

      overflow-y: auto;
      /* ‚úÖ use auto, not scroll */
      transform: translateX(100%);
      transition: transform 0.5s ease-in-out;
    }

    /* Mobile: Cart takes 100% width */
    @media (max-width: 767px) {
      #card {
        width: 100%;
        top: 50px;
        height: calc(100vh - 50px);
      }
    }

    /* When active */
    #card.active {
      transform: translateX(0);
    }

    /* Prevent page scroll when card is open */
