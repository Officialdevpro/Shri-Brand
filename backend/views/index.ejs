      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(0px);
      -webkit-backdrop-filter: blur(0px);
      z-index: 15;
      opacity: 0;
      visibility: hidden;
      transition:
        opacity 0.3s ease,
        visibility 0.3s ease;
    }

    .cart-backdrop.active {
      opacity: 1;
      visibility: visible;
    }

    .product-details {
      text-align: center;

      font-size: 16px;
      width: 100% !important;
    }

    .product-details .selecteditems {
